<div class="container mt-3">
  <h1 class="title text-center mb-4">Account Login</h1>
  <form action="/login" method="post" style="width: 300px; margin: auto;">
    <div class="mb-3">
      <input type="email" class="form-control" placeholder="Email" id="InputEmail1" name="email" aria-describedby="emailHelp">
    </div>
    <div class="mb-3">
      <input type="password" class="form-control" placeholder="Password" id="InputPassword" name="password">
    </div>
    <div class="button d-flex justify-content-center">
      <button type="submit" class="btn btn-primary">Sign in</button>
    </div>
  </form>
</div>